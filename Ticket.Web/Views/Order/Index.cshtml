@model IEnumerable<Ticket.Domain.DomainModels.Order>

@{
    ViewData["Title"] = "Order";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Order Id
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
  <tr>
            <td>
                @item.Id
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
            </td>
            <td>
            <form asp-action="GenerateInvoice" asp-controller="Order" method="get">
                        <input type="hidden" asp-for="@item.Id" name="id" />
                        <button type="submit" class="btn btn-primary">Generate Invoice</button>
            </form>
            </td>
        </tr>
}
    </tbody>
</table>
