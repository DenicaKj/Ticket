@model EditUserRoleViewModel

<h1>Edit Role for @Model.UserName</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="UserName">User Name</label>
        <input asp-for="UserName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="SelectedRole">Role</label>
        <select asp-for="SelectedRole" asp-items="@Model.AllRoles" class="form-control"></select>
    </div>
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>